<p id="notice"><%= notice %></p>

<h1>Chunks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Code</th>
      <th>Lang</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chunks.each do |chunk| %>
      <tr>
        <td><%= chunk.user_id %></td>
        <td><%= chunk.title %></td>
        <td><%= chunk.code %></td>
        <td><%= chunk.lang %></td>
        <td><%= chunk.desc %></td>
        <td><%= link_to 'Show', chunk %></td>
        <td><%= link_to 'Edit', edit_chunk_path(chunk) %></td>
        <td><%= link_to 'Destroy', chunk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chunk', new_chunk_path %>
